<div class="container">
    <div class="row">
      <div class="col">
        <div id="articles">

          <div class="card-columns">
            {{#each articles}}
              <div class="" style="width: 18rem;">

                <img class="card-img-top" src="{{this.imageURL}}" alt="Card image cap">

                <div class="card-body">
                  <h5 class="card-title" data-id={{this._id}}><a href="{{this.link}}">{{this.headline}}</a></h5>
                  <p class="card-text">{{this.summary}}</p>
                  <p class="card-text">{{this.articleDate}}</p>

                  <span style="float:right">
                  {{#if this._id}}
                    <i class="far fa-edit showNote" data-id="{{this._id}}" data-headline="{{this.headline}}" data-toggle="modal" data-target="#noteModal"></i>
                    <i class="far fa-trash-alt deleteArticle" data-id="{{this._id}}"></i>
                  {{else}}
                    <i class="fas fa-plus addArticle" data-headline="{{this.headline}}" data-link="{{this.link}}" data-summary="{{this.summary}}" data-imageURL="{{this.imageURL}}" data-articleDate="{{this.articleDate}}"></i>
                  {{/if}}
                  </span>

                </div>

              </div>

              <hr>
            {{/each}}
          </div>

        </div>
      </div>
    </div>
  </div>
  <div id="notes"></div>
{{!-- </div> --}}

<div id="noteModal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" id="saveNote" class="btn btn-primary" data-id="" data-dismiss="modal">Save comment</button>
      </div>
    </div>
  </div>
</div>